datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Collection {
  id       String      @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  author   String
  uuid     String      @unique
  scraps   Scrap[]
}

model Scrap {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  createdDate      DateTime
  lastModifiedDate DateTime
  // isChecked        Boolean?
  author           String?
  url              String
  selectors        Json[]      // UÅ¼ycie Json[] dla przechowywania danych w formacie JSON
  collection       Collection? @relation(fields: [collectionId], references: [id])
  collectionId     String?    @db.ObjectId
}
